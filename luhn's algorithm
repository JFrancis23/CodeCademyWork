function luhn(cardNumber){
let arr = cardNumber.split("").map(Number);
let total = 0;

for (let i = arr.length - 1; i >= 0; i--) {  //Backwards loop
	let value = arr[i]; //To be able to manipulate value at i

		if (i % 2 == 0) { //If position [i] is one that needs doubling...
		value *= 2;
			if (value > 9) {
			value -= 9;
			}
		}
	total += value; // If [i] doesn't need doubling (number just carries on, it goes straight to the +=value.)
	}
return(total % 10 === 0); // Returns true if valid test case
};